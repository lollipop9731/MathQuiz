<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_settings_"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.l.mathquiz.Settings_Activity">

    <EditText
        android:id="@+id/typeinpw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/typeinpwconfirm"
        android:layout_alignRight="@+id/passwordonoff"
        android:layout_below="@+id/passwordonoff"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="25dp"
        android:inputType="textPassword"
        android:hint="Passwort eingeben:" />

    <EditText
        android:id="@+id/typeinpwconfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/passwordonoff"
        android:layout_alignRight="@+id/passwordonoff"
        android:layout_below="@+id/typeinpw"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:inputType="textPassword"
        android:hint="Passwort bestätigen:" />

    <Switch
        android:id="@+id/passwordonoff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="67dp"
        android:text="Passwortschutz aktivieren"
        android:textColorLink="?attr/colorPrimaryDark"
        android:textSize="20sp"
        android:layout_marginLeft="39dp"
        android:layout_marginStart="39dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:theme="@style/SCBSwitch"
        />

    <Button
        android:text="Bestätigen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/typeinpw"
        android:layout_alignLeft="@+id/typeinpwconfirm"
        android:layout_alignStart="@+id/typeinpwconfirm"
        android:layout_marginTop="31dp"
        style="?android:attr/borderlessButtonStyle"
        android:id="@+id/confirmpwbtn" />
</RelativeLayout>
