<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_zahlenraum"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.l.mathquiz.ZahlenraumActivity">

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:id="@+id/schwierigkeitsgradspinner"
        android:entries="@array/schwierigkeitsgradspinnerarray"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="2dp" />

    <View
        android:layout_marginTop="105dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black" />

    <View
        android:layout_marginTop="165dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black" />
    <View
        android:layout_marginTop="225dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black" />

    <View
        android:layout_marginTop="285dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black" />

    <TextView
        android:text="Plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/schwierigkeitsgradspinner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="60dp"
        android:paddingLeft="20dp"
        android:textSize="20sp"
        android:id="@+id/zahlenraum_plus" />

    <TextView
        android:text="Minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/schwierigkeitsgradspinner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="120dp"
        android:paddingLeft="20dp"
        android:textSize="20sp"
        android:id="@+id/zahlenraum_minus" />

    <TextView
        android:text="Mal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/schwierigkeitsgradspinner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="180dp"
        android:paddingLeft="20dp"
        android:textSize="20sp"
        android:id="@+id/zahlenraum_mal" />

    <TextView
        android:text="Geteilt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/schwierigkeitsgradspinner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="240dp"
        android:paddingLeft="20dp"
        android:textSize="20sp"
        android:id="@+id/zahlenraum_geteilt" />

    <EditText
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:theme="@style/EditText"
        android:inputType="numberSigned"
        android:layout_toRightOf="@+id/zahlenraum_geteilt"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:hint="Min"
        android:id="@+id/zahlenraum_plus_minimum"
         />

    <EditText
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:theme="@style/EditText"
        android:inputType="numberSigned"
        android:layout_toRightOf="@+id/zahlenraum_geteilt"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="20dp"
        android:hint="Min"
        android:id="@+id/zahlenraum_minus_minimum"
        />

    <EditText
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:theme="@style/EditText"
        android:inputType="numberSigned"
        android:layout_toRightOf="@+id/zahlenraum_geteilt"
        android:layout_marginTop="170dp"
        android:layout_marginLeft="20dp"
        android:hint="Min"
        android:id="@+id/zahlenraum_mal_minimum"
        />

    <EditText
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:theme="@style/EditText"
        android:inputType="numberSigned"
        android:layout_toRightOf="@+id/zahlenraum_geteilt"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="20dp"
        android:hint="Min"
        android:id="@+id/zahlenraum_geteilt_minimum"
        />

    <EditText
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:theme="@style/EditText"
        android:inputType="numberSigned"
        android:layout_toRightOf="@+id/zahlenraum_geteilt"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="110dp"
        android:hint="Max"
        android:id="@+id/zahlenraum_plus_maximum"
        />

    <EditText
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:theme="@style/EditText"
        android:inputType="numberSigned"
        android:layout_toRightOf="@+id/zahlenraum_geteilt"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="110dp"
        android:hint="Max"
        android:id="@+id/zahlenraum_minus_maximum"
        />

    <EditText
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:theme="@style/EditText"
        android:inputType="numberSigned"
        android:layout_toRightOf="@+id/zahlenraum_geteilt"
        android:layout_marginTop="170dp"
        android:layout_marginLeft="110dp"
        android:hint="Max"
        android:id="@+id/zahlenraum_mal_maximum"
        />

    <EditText
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:theme="@style/EditText"
        android:inputType="numberSigned"
        android:layout_toRightOf="@+id/zahlenraum_geteilt"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="110dp"
        android:hint="Max"
        android:id="@+id/zahlenraum_geteilt_maximum"
        />

    <Button
        android:text="Speichern"
        android:background="@drawable/buttonstyle"
        android:textColor="@color/weiÃŸ"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onSave"
        android:layout_marginTop="330dp"
        android:id="@+id/saveButton"
        android:layout_centerHorizontal="true"
         />

</RelativeLayout>
